{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static" // <--- 關鍵更改：使用 @vercel/static
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/events",
      "dest": "/api/events.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
